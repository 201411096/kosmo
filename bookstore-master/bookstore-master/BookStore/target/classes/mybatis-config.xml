<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>

   <settings>
      <!-- 언더바(snakeCase)를 낙타표기법(camelCase)으로 변경 -->
      <setting name="mapUnderscoreToCamelCase" value="true"></setting>
   </settings>
   <!-- Alias 설정 -->
   <typeAliases>
      <typeAlias alias="book" type="com.mycompany.domain.BookVO" ></typeAlias>
      <typeAlias alias="bookcart" type="com.mycompany.domain.BuyCartListVO" ></typeAlias>
      <typeAlias alias="customer" type="com.mycompany.domain.CustomerVO" ></typeAlias>
      <typeAlias alias="buycartlist" type="com.mycompany.domain.BuyCartListVO" ></typeAlias>
      <typeAlias alias="tendency" type="com.mycompany.domain.TendencyVO"></typeAlias>
      <typeAlias alias="buylist" type="com.mycompany.domain.BuyListVO"></typeAlias>	
      <typeAlias alias="buy" type="com.mycompany.domain.BuyVO"></typeAlias>
      <typeAlias alias="review" type="com.mycompany.domain.ReviewVO" ></typeAlias>
      <typeAlias alias="store" type="com.mycompany.domain.StoreVO" ></typeAlias>
      <typeAlias alias="writer" type="com.mycompany.domain.WriterVO" ></typeAlias>		
   </typeAliases>


</configuration>
